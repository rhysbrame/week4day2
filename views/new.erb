<form method="post" action="/pizzas">
  <label for="first-name">First Name:</label>
    <input id="first-name" type="text" name="first_name" />
<br/>
  <label for="last-name">Surname:</label>
    <input id="last-name" type="text" name="last_name" />
<br/>
  <label for='pizza-select'>Select a Pizza:</label>
    <select id="pizza-select" name="topping">
      <option value="Margherita">Margherita</option>
      <option value="Quatro Formaghi">Quatro Formaghi</option>
      <option value="Putanesca">Putanesca</option>
      <option value="Calabrese">Calabrese</option>
      <option value="Tuscan">Tuscan</option>
  </select>
<br/>
  <label for="quantity">Quantity:</label>
    <input id="quantity" type="number" name="quantity"/>
<br/>
  <input type="submit" value="Order Pizza"/>
</form>